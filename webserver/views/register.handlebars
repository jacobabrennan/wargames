<div class="container">
    <form
        class="auth"
        action="/auth/register"
        method="POST"
    >
        <label for="username">Username</label>
        <input
            name="username"
            type="text"
        />
        <label for="password">Password</label>
        <input
            name="password"
            type="password"
        />
        <button type="submit">Submit</button>
    </form>
</div>